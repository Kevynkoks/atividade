 #include <stdio.h>
 
 int main()
 {
     
     float valor, gorjeta, conta, porcentagem;
     
      scanf("%f",&valor);
      
      scanf("%f",&porcentagem);
      
      gorjeta=((porcentagem / 100)*valor);
      
      conta= (valor + gorjeta);
     
     printf("conta:%.2f",conta);
 
     return 0;
 }
 
 
